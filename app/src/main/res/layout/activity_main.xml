<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CEE5F3"
    tools:context=".MainActivity"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:letterSpacing="0.05"
        android:text="Calculate"
        android:textSize="32dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#0E4265"
        android:layout_marginTop="12dp"
        ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/expression_text"
        android:textSize="36dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:layout_above="@+id/result_text"
        android:layout_marginHorizontal="20dp"
        android:paddingVertical="10dp"
        ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result_text"
        android:text="0"
        android:textSize="64dp"
        android:textAlignment="textEnd"
        android:textColor="#1E567A"
        android:layout_marginHorizontal="20dp"
        android:paddingVertical="10dp"
        android:layout_above="@+id/buttons_layout"
        ></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/buttons_layout"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="25dp"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:text="C"
                android:layout_margin="12dp"
                android:id="@+id/button_c"
                android:backgroundTint="#0C60F3"
                ></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="25dp"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_open_bracket"
                android:text="("
                android:backgroundTint="#47A2F0"
                ></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="25dp"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_close_bracket"
                android:text=")"
                android:backgroundTint="#47A2F0"
                ></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="25dp"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_divide"
                android:text="/"
                android:backgroundTint="#FF9800"
                ></com.google.android.material.button.MaterialButton>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="25dp"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_7"
                android:text="7"
                android:backgroundTint="#47A2F0"
                ></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="25dp"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_8"
                android:text="8"
                android:backgroundTint="#47A2F0"
                ></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="25dp"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_9"
                android:text="9"
                android:backgroundTint="#47A2F0"
                ></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="25dp"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_multiple"
                android:text="*"
                android:backgroundTint="#FF9800"
                ></com.google.android.material.button.MaterialButton>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="25dp"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_4"
                android:text="4"
                android:backgroundTint="#47A2F0"
                ></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="25dp"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_5"
                android:text="5"
                android:backgroundTint="#47A2F0"
                ></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="25dp"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_6"
                android:text="6"
                android:backgroundTint="#47A2F0"
                ></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="25dp"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_minus"
                android:text="-"
                android:backgroundTint="#FF9800"
                ></com.google.android.material.button.MaterialButton>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="25dp"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_1"
                android:text="1"
                android:backgroundTint="#47A2F0"
                ></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="25dp"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_2"
                android:text="2"
                android:backgroundTint="#47A2F0"
                ></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="25dp"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_3"
                android:text="3"
                android:backgroundTint="#47A2F0"
                ></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="25dp"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_plus"
                android:text="+"
                android:backgroundTint="#FF9800"
                ></com.google.android.material.button.MaterialButton>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <com.google.android.material.button.MaterialButton
                android:layout_width="172dp"
                android:layout_height="72dp"
                app:cornerRadius="25dp"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_0"
                android:text="0"
                android:backgroundTint="#47A2F0"
                ></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="25dp"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_dot"
                android:text="."
                android:backgroundTint="#47A2F0"
                ></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="25dp"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_equal"
                android:text="="
                android:backgroundTint="#DA5B17"
                ></com.google.android.material.button.MaterialButton>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>